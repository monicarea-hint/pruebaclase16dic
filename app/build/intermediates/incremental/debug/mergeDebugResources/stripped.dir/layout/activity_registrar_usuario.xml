<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appBanco.RegistrarUsuario">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--vista para la imagen-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/cas"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/primero"
                app:layout_constraintEnd_toEndOf="@id/image"
                app:layout_constraintStart_toStartOf="@id/image"
               app:layout_constraintBottom_toBottomOf="parent"/>




        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--vista para el número de cedula-->
        <EditText
            android:id="@+id/numeroCedula"
            android:hint="Número de cedula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--vista para el nombre usuario-->
        <EditText
            android:id="@+id/nombreUsuario"
            android:hint="Ingrese el nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--vista para la constraseña-->
        <EditText
            android:id="@+id/passwordUsuario"
            android:hint="Ingrese una contraseña"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <!--vista para el saldo usuario-->
        <EditText
            android:id="@+id/saldoUsuario"
            android:hint="Ingrese el saldo"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--vista para el tipo de cuenta-->
        <EditText
            android:id="@+id/tipoCuentaUsuario"
            android:hint="Ingrese el tipo de cuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnRegistrar"
            android:text="Registrar"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvTengoCuenta"
            android:text="Tengo cuenta. Regresar"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>